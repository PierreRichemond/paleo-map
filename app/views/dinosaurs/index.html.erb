<div class="dino-container m-5">
  <div>
    <h1 class ='text-center pt-3'>Welcome to Paleo-map</h1>
    <h2 class ='text-center p-3'>Select a category of dinosaurs and check on the map where they were found!</h2>
  </div>
  <div class="dino-tag">
    <div class="col-12 col-md-4 col-lg-4">
      <% Dinosaur::TAGS.each do |tag| %>
        <%= link_to tag, dinosaurs_path(tag: tag), class: "btn btn-primary tag-btn" %>
      <% end %>
      <% if @dino.present? %>
        <%= image_tag(@dino.photo, style: "width: 100%;") %>
        <h3><%= @count %> <%= @tag %> were found.</h3>
      <% end %>
    </div>
    <div class="col-12 col-md-8 col-lg-8">
      <div id="map"
              style="width: 100%; height: 800px;"
              data-markers="<%= @markers.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
  <div class = 'container'>
    <%= image_tag("Geological_Time.jpeg", style: "width: 100%;") %>
  </div>
</div>
